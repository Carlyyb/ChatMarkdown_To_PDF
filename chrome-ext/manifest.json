{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "0.5",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": ["activeTab", "scripting", "storage", "clipboardRead", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://chatgpt.com/*",
    "*://gemini.google.com/*",
    "*://aistudio.google.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/*.js",
        "libs/html2pdf.bundle.min.js",
        "libs/dom-to-image-more.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*"
      ],
      "js": [
        "libs/html2pdf.bundle.min.js",
        "content.js"
      ],
      "css": ["md.css"],
      "run_at": "document_end"
    }
  ]
}
