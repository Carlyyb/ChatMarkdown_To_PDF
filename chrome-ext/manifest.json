{
  "manifest_version": 3,
  "name": "ChatMarkdown To PDF",
  "version": "1.0.0",
  "description": "Export ChatGPT/Gemini messages to PDF/PNG from Markdown or DOM.",
  "default_locale": "en",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://aistudio.google.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*",
      "https://gemini.google.com/*",
      "https://aistudio.google.com/*"
    ],
    "js": [
      "libs/html2canvas.min.js",
      "libs/html2pdf.bundle.min.js",
      "content.js"
    ],
    "css": ["styles/inject.css"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [{
    "resources": [
      "bridge.js",
      "libs/html2canvas.min.js",
      "libs/jspdf.umd.min.js",
      "libs/html2pdf.bundle.min.js",
      "libs/*.map"
    ],
    "matches": ["*://*/*"]
  }],
  "action": {
    "default_title": "ChatMarkdown To PDF"
  }
}
